<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Post List</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
  <div class="container mx-auto py-10">
    <h1 class="text-4xl font-bold text-center text-blue-600 mb-6">Post List</h1>

    <div class="bg-white p-6 rounded shadow-md">
      <h2 class="text-2xl font-bold mb-4">Posts</h2>
      <ul>
        <% posts.forEach((post) => { %>
        <li class="mb-4">
          <h3 class="text-lg font-semibold text-gray-700"><%= post.title %></h3>
          <p class="text-sm text-gray-600"><%= post.body %></p>
          <span class="text-xs text-gray-500">Author: <%= post.author %></span>
          <a href="/delete/<%= post._id %>" class="text-red-500 ml-4">Delete</a>
        </li>
        <% }) %>
      </ul>
    </div>

    <form class="mt-6 bg-white p-6 rounded shadow-md" action="/add" method="POST">
      <h2 class="text-2xl font-bold mb-4">Add New Post</h2>
      <input
        type="text"
        name="title"
        placeholder="Title"
        class="border rounded p-2 w-full mb-4"
      />
      <textarea
        name="body"
        placeholder="Body"
        class="border rounded p-2 w-full mb-4"
      ></textarea>
      <input
        type="text"
        name="author"
        placeholder="Author"
        class="border rounded p-2 w-full mb-4"
      />
      <button
        type="submit"
        class="bg-blue-600 text-white rounded p-2 w-full"
      >
        Add Post
      </button>
    </form>
  </div>
</body>
</html>
